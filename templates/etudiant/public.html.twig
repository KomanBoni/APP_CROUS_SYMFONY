{% extends 'base.html.twig' %}

{% block title %}Fiche Étudiant{% endblock %}

{% block body %}
    <main style="max-width: 640px; margin: 2rem auto; font-family: Arial, sans-serif;">
        <h1 style="text-align: center; margin-bottom: 1.5rem;">Informations de l'étudiant</h1>
        <section style="background: #f7f7f7; border-radius: 8px; padding: 1.5rem; box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);">
            <dl style="display: grid; grid-template-columns: 1fr 2fr; row-gap: 0.75rem; column-gap: 1rem; margin: 0;">
                <dt style="font-weight: bold;">Nom</dt>
                <dd style="margin: 0;">{{ nom }}</dd>

                <dt style="font-weight: bold;">Prénom</dt>
                <dd style="margin: 0;">{{ prenom }}</dd>

                <dt style="font-weight: bold;">Email</dt>
                <dd style="margin: 0;">{{ email }}</dd>

                <dt style="font-weight: bold;">Filière</dt>
                <dd style="margin: 0;">{{ filiere }}</dd>

                <dt style="font-weight: bold;">Niveau</dt>
                <dd style="margin: 0;">{{ niveau }}</dd>

                <dt style="font-weight: bold;">Numéro de carte</dt>
                <dd style="margin: 0;">{{ numeroCarte }}</dd>
            </dl>
        </section>
    </main>
{% endblock %}

